<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\aceptar.png" />
    <None Remove="Assets\agregar.png" />
    <None Remove="Assets\cancelar.png" />
    <None Remove="Assets\ElBuenGustoLogo.png" />
    <None Remove="Assets\Geologica-VariableFont_CRSV,SHRP,slnt,wght.ttf" />
    <None Remove="Assets\Marmelad-Regular.ttf" />
    <None Remove="Assets\Rubik-Italic-VariableFont_wght.ttf" />
