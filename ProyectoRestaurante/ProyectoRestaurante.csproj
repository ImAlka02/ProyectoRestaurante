    </Resource>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\aceptar.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\agregar.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\ElBuenGustoLogo.png" />
