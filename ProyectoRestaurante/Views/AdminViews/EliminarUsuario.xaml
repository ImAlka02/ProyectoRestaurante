<UserControl x:Class="ProyectoRestaurante.Views.AdminViews.EliminarUsuario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoRestaurante.Views.AdminViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock FontSize="24" FontWeight="Bold"><Run  Text="¿Esta seguro de eliminar el usuario"></Run>
                                   <Run Text="{Binding Usuario.Nombre}" Foreground="#efa42b"></Run><Run  Text=" con el correo "></Run>
            <Run Foreground="#efa42b" Text="{Binding Usuario.Correo}"></Run>
        </TextBlock>
        <WrapPanel HorizontalAlignment="Center" Margin="10">
            <Button Height="50" Margin="10,0" Background="Transparent" BorderThickness="0">
                <Image Source="/Assets/aceptar.png" ></Image>
            </Button>
            <Button Height="50" Margin="10,0" Background="Transparent" BorderThickness="0">
                <Image Source="/Assets/cancelar.png" ></Image>
            </Button>
        </WrapPanel>

    </StackPanel>
</UserControl>
